@using Microsoft.AspNetCore.Identity
@using BlogProject.Models
@inject SignInManager<BlogUser> SignInManager
@inject UserManager<BlogUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
            <a class="nav-link px-lg-3 py-3 py-lg-4" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Manage</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="nav-link px-lg-3 py-3 py-lg-4 btn text-white text-uppercase">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link px-lg-3 py-3 py-lg-4" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link px-lg-3 py-3 py-lg-4" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}

